{
	// 使用 IntelliSense 了解相关属性。
	// 悬停以查看现有属性的描述。
	// 欲了解更多信息，请访问: https://go.microsoft.com/fwlink/?linkid=830387
	"version": "0.2.0",
	"compounds": [
		{
			"name": "App Firefox",
			"configurations": ["Launch Parcel", "Launch Firefox"]
		},
		{
			"name": "App Chrome",
			"configurations": ["Launch Parcel", "Launch Chrome"]
		}
	],
	"configurations": [
		{
			"type": "node",
			"request": "launch",
			"name": "Launch Parcel",
			"runtimeArgs": ["parcel", "index.html", "-p 9000"],
			"runtimeExecutable": "yarn",
			"cwd": "${workspaceFolder}/src/webroot/",
			"stopOnEntry": false,
			"skipFiles": ["<node_internals>/**"]
		},
		{
			"type": "chrome",
			"name": "Launch Chrome",
			"request": "launch",
			"url": "http://localhost:9000",
			"webRoot": "${workspaceFolder}"
		},
		{
			"type": "firefox",
			"request": "launch",
			"name": "Launch Firefox",
			"url": "http://localhost:9000",
			"profile": "dev",
			"webRoot": "${workspaceFolder}",
			"pathMappings": [
				{
					"url": "webpack:///src/",
					"path": "${webRoot}/"
				}
			]
		}
	]
}
